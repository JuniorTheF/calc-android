<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    >

    <TableRow
        android:id="@+id/top"
        android:gravity="bottom"
        android:layout_above="@id/top2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="AC"
            android:textColor="#FF6E00"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="Del"
            android:textColor="#FF6E00"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="%"
            android:textColor="#FF6E00"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="/"
            android:textColor="#FF6E00"
            android:textSize="17sp" />
    </TableRow>

    <TableRow
        android:id="@+id/top2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bot">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="7"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="8"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="9"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="*"
            android:textColor="#FF6E00"
            android:textSize="17sp" />
    </TableRow>

    <TableRow
        android:id="@+id/bot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bot2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="4"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="5"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="6"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="â”€"
            android:textColor="#FF6E00" />
    </TableRow>

    <TableRow
        android:id="@+id/bot2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_above="@id/bot3"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="1"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="2"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="3"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="+"
            android:textColor="#FF6E00"
            android:textSize="17sp" />
    </TableRow>

    <TableRow
        android:id="@+id/bot3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="neg"
            android:textColor="#FF6E00"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text="0"
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/black"
            android:text=","
            android:textColor="#ffffff" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FF6E00"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </TableRow>
</RelativeLayout>
